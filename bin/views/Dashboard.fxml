<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #151515; -fx-padding: 10;">
            <Label text="Purse Pro" style="-fx-font-size: 24px; -fx-text-fill: #EEEEEE; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Settings" style="-fx-background-color: transparent; -fx-text-fill: #EEEEEE;" onAction="#openSettings"/>
            <Button text="About Us" style="-fx-background-color: transparent; -fx-text-fill: #EEEEEE;" onAction="#openAboutUs"/>
            <Button text="Logout" style="-fx-background-color: #C73659; -fx-text-fill: #EEEEEE; -fx-font-weight: bold;" onAction="#logout"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #151515; -fx-padding: 20;">
            <Button text="Dashboard" style="-fx-background-color: #A91D3A; -fx-text-fill: #EEEEEE; -fx-font-weight: bold; -fx-background-radius: 10;" />
            <Button text="Send Money" style="-fx-background-color: #A91D3A; -fx-text-fill: #EEEEEE; -fx-font-weight: bold; -fx-background-radius: 10;" onAction="#openSendMoney"/>
            <Button text="Transactions" style="-fx-background-color: #A91D3A; -fx-text-fill: #EEEEEE; -fx-font-weight: bold; -fx-background-radius: 10;" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #EEEEEE; -fx-border-color: #C73659; -fx-border-width: 2;">
            <Label text="Overview" style="-fx-font-size: 24px; -fx-text-fill: #151515; -fx-font-weight: bold;" />
            <HBox spacing="15">
                <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #A91D3A; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #EEEEEE;">
                    <Label text="Total Balance" style="-fx-font-size: 16px; -fx-text-fill: #151515;" />
                  
                </VBox>
                <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #A91D3A; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #EEEEEE;">
                    <Label text="Income This Month" style="-fx-font-size: 16px; -fx-text-fill: #151515;" />
                    
                </VBox>
                <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #A91D3A; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #EEEEEE;">
                    <Label text="Expenses This Month" style="-fx-font-size: 16px; -fx-text-fill: #151515;" />
                   
                </VBox>
            </HBox>
            <Label text="Recent Transactions" style="-fx-font-size: 18px; -fx-text-fill: #151515; -fx-font-weight: bold;" />
            <ListView fx:id="transactionList" prefHeight="200" style="-fx-background-color: #EEEEEE; -fx-border-color: #A91D3A;" />
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <Label text="Purse Pro - Your Digital Wallet" style="-fx-background-color: #151515; -fx-text-fill: #EEEEEE; -fx-padding: 10px; -fx-font-weight: bold;" alignment="CENTER" />
    </bottom>

</BorderPane>
