<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SendMoneyController">
    <top>
        <Label text="Send Money" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #151515; -fx-padding: 20;" alignment="CENTER" />
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 30;">
            <Label text="Recipient Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField fx:id="recipientAccountField" promptText="Recipient's Email" style="-fx-background-color: #EEEEEE; -fx-border-color: #A91D3A; -fx-border-radius: 5;" />
            <TextField fx:id="amountField" promptText="Amount" style="-fx-background-color: #EEEEEE; -fx-border-color: #A91D3A; -fx-border-radius: 5;" />
            <TextField fx:id="descriptionField" promptText="Description" style="-fx-background-color: #EEEEEE; -fx-border-color: #A91D3A; -fx-border-radius: 5;" />
            <ComboBox fx:id="categoryField" promptText="Select Category" style="-fx-background-color: #EEEEEE; -fx-border-color: #A91D3A; -fx-border-radius: 5;" />
            <Button text="Calculate Total (with Fees)" onAction="#calculateTotal" style="-fx-background-color: #C73659; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
            <Label fx:id="totalLabel" text="Total Amount: $0.00" style="-fx-font-size: 16px; -fx-text-fill: #151515;" />
            <Button text="Send Money" onAction="#sendMoney" style="-fx-background-color: #A91D3A; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
            <Button text="Back" onAction="#goBack" style="-fx-background-color: #A91D3A; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />
        </VBox>
    </center>
</BorderPane>
