<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #151515; -fx-padding: 10;">
            <Label style="-fx-font-size: 24px; -fx-text-fill: #EEEEEE; -fx-font-weight: bold;" text="Purse Pro" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#openSettings" style="-fx-background-color: transparent; -fx-text-fill: #EEEEEE;" text="Settings" />
            <Button onAction="#openAboutUs" style="-fx-background-color: transparent; -fx-text-fill: #EEEEEE;" text="About Us" />
            <Button onAction="#logout" style="-fx-background-color: #C73659; -fx-text-fill: #EEEEEE; -fx-font-weight: bold;" text="Logout" />
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #151515; -fx-padding: 20;">
            <Button style="-fx-background-color: #A91D3A; -fx-text-fill: #EEEEEE; -fx-font-weight: bold; -fx-background-radius: 10;" text="Dashboard" />
            <Button onAction="#openSendMoney" style="-fx-background-color: #A91D3A; -fx-text-fill: #EEEEEE; -fx-font-weight: bold; -fx-background-radius: 10;" text="Send Money" />
            <Button style="-fx-background-color: #A91D3A; -fx-text-fill: #EEEEEE; -fx-font-weight: bold; -fx-background-radius: 10;" text="Transactions" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #EEEEEE; -fx-border-color: #C73659; -fx-border-width: 2;">
            <Label style="-fx-font-size: 24px; -fx-text-fill: #151515; -fx-font-weight: bold;" text="Overview" />
            <HBox spacing="15">
                <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #A91D3A; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #EEEEEE;">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #151515;" text="Total Balance" />
                  
                </VBox>
            	<Button onAction="#trackIncome" style="-fx-border-color: #A91D3A; -fx-border-width: 2; -fx-padding: 20; -fx-background-color: #EEEEEE; -fx-font-size: 16px; -fx-text-fill: #151515;" text="Track Income" />
                <VBox alignment="CENTER" spacing="10" style="-fx-border-color: #A91D3A; -fx-border-width: 2; -fx-padding: 10; -fx-background-color: #EEEEEE;">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #151515;" text="Expenses This Month" />
                   
                </VBox>
            </HBox>
            <Label style="-fx-font-size: 18px; -fx-text-fill: #151515; -fx-font-weight: bold;" text="Recent Transactions" />
            <ListView fx:id="transactionList" prefHeight="200" style="-fx-background-color: #EEEEEE; -fx-border-color: #A91D3A;" />
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <Label alignment="CENTER" style="-fx-background-color: #151515; -fx-text-fill: #EEEEEE; -fx-padding: 10px; -fx-font-weight: bold;" text="Purse Pro - Your Digital Wallet" />
    </bottom>

</BorderPane>
